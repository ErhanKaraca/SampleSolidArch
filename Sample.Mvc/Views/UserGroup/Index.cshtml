@model UserGroupListViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            GroupName
        </th>
        <th>
            CreatedDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.UserGroups)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserGroupId }) |
                @Html.ActionLink("Details", "Details", new { id = item.UserGroupId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.UserGroupId })
            </td>
        </tr>
    }

</table>
